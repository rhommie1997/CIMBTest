@using CIMBTest.ViewModels;
@model List<UseCase3ViewModel>

<style>
    .table-container {
        overflow-x: auto;
    }

</style>

<div class="card shadow border-0 my-4">
    <div class="row">
        <div class="col-12 text-center">
            <p class="h2">Use Case 3 List</p>
        </div>
    </div>
    <div class="card-body p-4 table-container">
        <table class="table" style="width:1200px">
            <thead>
                <tr>
                    <th>No</th>
                    <th>CIF</th>
                    <th>Monthly Income</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Occupation</th>
                    <th>Total Score</th>
                    <th>Risk Segment</th>
                    <th>Faculty Limit</th>
                </tr>
            </thead>
            <tbody>
                @if (@Model.Count > 0)
                {
                    int i = 1;
                    foreach (var data in Model ?? new List<UseCase3ViewModel>())
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@data.CIF</td>
                            <td>@data.MonthlyIncome.ToString("N2")</td>
                            <td>@data.Age</td>
                            <td>@data.Gender</td>
                            <td>@data.Occupation</td>
                            <td>@data.TotalScore.ToString("N2")</td>
                            <td>@data.RiskSegment</td>
                            <td>@data.FacultyLimit.ToString("N2")</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">No Data</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>